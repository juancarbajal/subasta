bgButton()
	background #f51217
	background -moz-linear-gradient(top,  #f51217 0%, #c00013 100%)
	background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f51217), color-stop(100%,#c00013))
	background -webkit-linear-gradient(top,  #f51217 0%,#c00013 100%)
	background -o-linear-gradient(top,  #f51217 0%,#c00013 100%)
	background -ms-linear-gradient(top,  #f51217 0%,#c00013 100%)
	background linear-gradient(to bottom,  #f51217 0%,#c00013 100%)
	filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#f51217', endColorstr='#c00013',GradientType=0)")
bgButtonHover()
	background: #D3D3D3	
	background: -moz-linear-gradient(top, #D3D3D3 0%, #B1B1B1 100%)
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#D3D3D3), color-stop(100%,#B1B1B1))
	background: -webkit-linear-gradient(top, #D3D3D3 0%,#B1B1B1 100%)
	background: -o-linear-gradient(top, #D3D3D3 0%,#B1B1B1 100%)
	background: -ms-linear-gradient(top, #D3D3D3 0%,#B1B1B1 100%)
	background: linear-gradient(to bottom, #D3D3D3 0%,#B1B1B1 100%)
	filter: unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#D3D3D3', endColorstr='#B1B1B1',GradientType=0 )") /* IE6-8 */
bgButtonStar()
	background: #8e8e8e
	background: -moz-linear-gradient(top, #8e8e8e 0%, #353535 100%)
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#8e8e8e), color-stop(100%,#353535))
	background: -webkit-linear-gradient(top, #8e8e8e 0%,#353535 100%)
	background: -o-linear-gradient(top, #8e8e8e 0%,#353535 100%)
	background: -ms-linear-gradient(top, #8e8e8e 0%,#353535 100%)
	background: linear-gradient(to bottom, #8e8e8e 0%,#353535 100%)
	filter: unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#8e8e8e', endColorstr='#353535',GradientType=0 )") 
bgBarResult()
	background: #EDEDED
	background: unquote("url(data:image/svg+xml;base64,)")
	background: -moz-linear-gradient(top, #EDEDED 21%, #CECECE 100%)
	background: -webkit-gradient(linear, left top, left bottom, color-stop(21%,#EDEDED), color-stop(100%,#CECECE))
	background: -webkit-linear-gradient(top, #EDEDED 21%,#CECECE 100%)
	background: -o-linear-gradient(top, #EDEDED 21%,#CECECE 100%)
	background: -ms-linear-gradient(top, #EDEDED 21%,#CECECE 100%)
	background: linear-gradient(to bottom, #EDEDED 21%,#CECECE 100%)
blockSpace(w,h)
	height h
	width w
	float left
	display block

